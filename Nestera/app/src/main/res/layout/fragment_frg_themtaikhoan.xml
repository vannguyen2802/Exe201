<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/assets_task_01k6e26zg7fp5ve631qbt3b96t_1759261357_img_1"
    android:padding="20dp"
    tools:context=".Fragment.frg_themtaikhoan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/nobg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Tạo tài khoản mới"
            android:textColor="@color/gray_dark"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Nhập tên đăng nhập"
            android:textColor="@color/gray_dark" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:boxBackgroundColor="#F88E4B"
            app:boxBackgroundMode="outline"
            app:endIconTint="@color/white"
            app:startIconTint="#F88E4B">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtUsername"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_selector"
                android:textColor="@color/gray_dark" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Mật khẩu mới"
            android:textColor="@color/gray_dark" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edtPass_ttk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="#F88E4B"
            app:boxBackgroundMode="outline"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/white"
            app:helperTextTextColor="#F88E4B">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPassMoi_dmk"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/border_selector"
                android:inputType="textPassword"
                android:textColor="@color/gray_dark" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Nhập lại mật khẩu"
            android:textColor="@color/gray_dark" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="#F88E4B"
            app:boxBackgroundMode="outline"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/white">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtNhapLaiPass_ttk"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/border_selector"
                android:inputType="textPassword"
                android:textColor="@color/gray_dark" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Nhập họ tên"
            android:textColor="@color/gray_dark" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:boxBackgroundColor="#F88E4B"
            app:boxBackgroundMode="outline">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtHoTen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_selector"
                android:textColor="@color/gray_dark" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Chọn phòng"
            android:textColor="@color/gray_dark" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:boxBackgroundColor="#F88E4B"
            app:boxBackgroundMode="outline">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtChonPhong"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_selector"
                android:textColor="@color/gray_dark" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnDangNhap"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/filter_button_background"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:text="Xác nhận"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</FrameLayout>