<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="371dp"
    android:layout_height="match_parent"
    android:background="@drawable/card_background"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText
        android:id="@+id/edtMaLoaiPhong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_selector"
        android:padding="5dp"
        android:textColor="@color/gray_dark"
        android:textColorHint="@color/gray_dark"
        android:textSize="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingTop="10dp"
        android:text="Tên loại"
        android:textColor="@color/gray_dark" />

    <EditText
        android:id="@+id/edtTenLoaiPhong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_selector"
        android:padding="5dp"
        android:textColor="@color/gray_dark"
        android:textColorHint="@color/gray_dark"
        android:textSize="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingTop="10dp"
        android:text="Phí dịch vụ"
        android:textColor="@color/gray_dark" />

    <EditText
        android:id="@+id/edtPhiDichVu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_selector"
        android:padding="5dp"
        android:textColor="@color/gray_dark"
        android:textColorHint="@color/gray_dark"
        android:textSize="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingTop="10dp"
        android:text="Giá điện"
        android:textColor="@color/gray_dark" />

    <EditText
        android:id="@+id/edtTienDien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_selector"
        android:padding="5dp"
        android:textColor="@color/gray_dark"
        android:textColorHint="@color/gray_dark"
        android:textSize="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingTop="10dp"
        android:text="Giá nước"
        android:textColor="@color/gray_dark" />

    <EditText
        android:id="@+id/edtTienNuoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_selector"
        android:padding="5dp"
        android:textColor="@color/gray_dark"
        android:textColorHint="@color/gray_dark"
        android:textSize="17dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnXacNhan"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:background="@drawable/filter_button_background"
            android:text="Xác nhận"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnHuy"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:background="@color/pink"
            android:text="Hủy"
            android:textColor="#FFFFFF" />
    </LinearLayout>


</LinearLayout>