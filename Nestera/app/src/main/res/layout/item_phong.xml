<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:background="@drawable/khungitem"
        android:alpha="0.4"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtPhong"
                android:text="Phòng: P202"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:textColor="#AAF84B"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/txtXemHopDong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem hợp đồng"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="3dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/txtGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá: 3.000.000đ/tháng"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtTienNghi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiện nghi: Điều hoà, Nóng lạnh, Tủ lạnh, Tủ quần áo"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtLoaiPhong_Phong"
                android:layout_width="0dp"
                android:layout_weight="3.75"
                android:layout_height="wrap_content"
                android:text="Loại phòng: Full"
                android:textColor="@color/white"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/txtTinhTrang"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Đã cho thuê"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/btnDeletePhong"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:src="@drawable/delete" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>