<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="20dp">
    <EditText
        android:id="@+id/edtMaHoaDon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/khungedt"
        android:hint="Mã hóa đơn"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textColorHint="#9F9B9B"
        android:textSize="17dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="Chọn ngân hàng thanh toán"
        android:paddingLeft="6dp"
        android:textColor="@color/white" />

    <Spinner
        android:id="@+id/spnNganHang"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginTop="10dp"

        android:popupBackground="@color/black"
        android:textSize="17dp" />
    <ImageView
        android:id="@+id/imgAnhQR_tt"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/img_camera"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="Gửi Bill"
        android:paddingLeft="6dp"
        android:textColor="@color/white" />
    <ImageView
        android:id="@+id/imgAnhThanhToan"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/img_camera"/>
    <Button
        android:id="@+id/btnChonAnhtt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chọn ảnh"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnXacNhantt"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:background="@drawable/khung_login"
            android:text="Xác nhận"
            android:textColor="#AAF84B" />

        <Button
            android:id="@+id/btnHuytt"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:background="@drawable/khung_login"
            android:text="Hủy"
            android:textColor="#F84B4B" />
    </LinearLayout>


</LinearLayout>