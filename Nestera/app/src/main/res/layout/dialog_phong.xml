<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    android:background="@drawable/card_background"
    android:gravity="center_vertical"
    android:orientation="vertical"

    android:padding="20dp">

    <EditText
        android:id="@+id/edtMaPhong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_selector"
        android:hint="Mã phòng"
        android:visibility="gone"
        android:padding="5dp"
        android:textColor="@color/gray_dark"
        android:textColorHint="@color/gray_dark"
        android:textSize="17dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingTop="10dp"
        android:text="Tên phòng"
        android:textColor="@color/gray_dark" />
    <EditText
        android:id="@+id/edtTenPhong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_selector"
        android:padding="5dp"
        android:textColor="@color/gray_dark"
        android:textColorHint="@color/gray_medium"
        android:textSize="17dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingTop="10dp"
        android:text="Loại phòng"
        android:textColor="@color/gray_dark" />
    <Spinner
        android:id="@+id/spnLoaiPhong"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:paddingLeft="10dp"
        android:backgroundTint="@color/gray_dark"
        android:popupBackground="@color/black"
        android:textSize="17dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingTop="10dp"
        android:text="Giá phòng"
        android:textColor="@color/gray_dark" />
    <EditText
        android:id="@+id/edtGia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_selector"
        android:padding="5dp"
        android:textColor="@color/gray_dark"
        android:textColorHint="@color/gray_medium"
        android:textSize="17dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingTop="10dp"
        android:text="Tiện nghi"
        android:textColor="@color/gray_dark" />
    <EditText
        android:id="@+id/edtTienNghi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_selector"
        android:padding="5dp"
        android:textColor="@color/gray_dark"
        android:textColorHint="@color/gray_medium"
        android:textSize="17dp" />
    <CheckBox
        android:layout_gravity="start"
        android:id="@+id/chkDaChoThue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/gray_dark"
        android:layout_marginLeft="-4dp"
        android:textColor="@color/gray_dark"
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        android:text="Đã cho thuê"/>

    <!-- Thêm trường địa chỉ -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingTop="10dp"
        android:text="Địa chỉ"
        android:textColor="@color/gray_dark" />
    
    <EditText
        android:id="@+id/edtDiaChi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_selector"
        android:padding="5dp"
        android:hint="Nhập địa chỉ phòng trọ"
        android:textColor="@color/gray_dark"
        android:textColorHint="@color/gray_medium"
        android:textSize="17dp" />

    <!-- Phần chọn ảnh phòng trọ -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingTop="10dp"
        android:text="Ảnh phòng trọ"
        android:textColor="@color/gray_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/btnChonAnh"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/filter_button_background"
            android:text="Chọn ảnh"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginEnd="5dp" />

        <TextView
            android:id="@+id/txtSoAnhDaChon"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0 ảnh được chọn"
            android:textColor="@color/gray_dark"
            android:textSize="14sp"
            android:background="@drawable/border_selector"
            android:layout_marginStart="5dp" />

    </LinearLayout>

    <!-- RecyclerView để hiển thị ảnh đã chọn -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewImages"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnXacNhan"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:background="@drawable/filter_button_background"
            android:text="Xác nhận"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnHuy"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:background="@color/pink"
            android:text="Hủy"
            android:textColor="#FFFFFF" />
    </LinearLayout>


</LinearLayout>