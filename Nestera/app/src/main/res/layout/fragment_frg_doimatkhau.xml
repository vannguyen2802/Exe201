<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:padding="20dp"
    tools:context=".Fragment.frg_doimatkhau">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo_nestera"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Đổi mật khẩu"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu cũ"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:startIconDrawable="@drawable/baseline_lock_24"
            app:startIconTint="#AAF84B"

            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="#AAF84B"

            app:endIconMode="password_toggle"
            app:endIconTint="@color/white"




            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPassCu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/khungedt"
                android:textColor="@color/white"
                android:inputType="textPassword"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu mới"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPassMoi_dmk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:startIconDrawable="@drawable/baseline_lock_24"
            app:startIconTint="#AAF84B"

            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="#AAF84B"

            app:endIconMode="password_toggle"
            app:endIconTint="@color/white"


            app:helperTextEnabled="true"
            app:helperText=" "
            app:helperTextTextColor="#F88E4B"



            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPassMoi_dmk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/khungedt"
                android:textColor="@color/white"
                android:inputType="textPassword"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập lại mật khẩu"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:startIconDrawable="@drawable/baseline_lock_24"
            app:startIconTint="#AAF84B"

            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="#AAF84B"

            app:endIconMode="password_toggle"
            app:endIconTint="@color/white"




            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtNhapLaiPass_dmk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/khungedt"
                android:textColor="@color/white"
                android:inputType="textPassword"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/btnXacNhan"
            android:layout_gravity="center"
            android:background="@drawable/khung_login"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Xác nhận"
            android:layout_marginTop="50dp"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:textColor="#AAF84B"/>
    </LinearLayout>
</FrameLayout>